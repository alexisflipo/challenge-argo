<!-- Header section -->
<header>
  <h1>
    <img src="https://www.wildcodeschool.com/assets/logo_main-e4f3f744c8e717f1b7df3858dce55a86c63d4766d5d9a7f454250145f097c2fe.png" alt="Wild Code School logo" class="banner" />
    Les Argonautes
  </h1>
</header>

<!-- Main section -->
<main>
  <!-- New member form -->
  <h2>Ajouter un(e) Argonaute</h2>
    <%= simple_form_for @argonaute do |f| %>
        <%= f.input :name, required: true  %>
        <%= f.submit "Créer" %>
    <% end %>
  <!-- Member list -->
  <h2>Membres de l'équipage</h2>
  <% if @argonautes.present? %>
    <div class="container d-flex justify-content-center">
        <div class="row">
            <% @argonautes.each do |argonaute|%>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4 text-center mt-3"><%= argonaute.name %></div>
            <% end %>
        </div>
    </div>
  <% else %>
    <h3 class="text-center"> Il n'y a pas d'argonautes. Ajoutez en un !</h3>
  <% end %>
</main>

<footer>
  <p>Réalisé par Jason en Anthestérion de l'an 515 avant JC</p>
</footer>